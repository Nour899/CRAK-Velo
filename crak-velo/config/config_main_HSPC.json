{
    "name": "VelocityDemo",
    "logger_config_path": "./CRAK-Velo/crak-velo/config/config_logger.json",

    "adata_path": "./CRAK-Velo/notebooks/data/HSPC_dataset/prepro_adata/adata_rna_prepro.h5ad",
    "adata_atac_path": "./CRAK-Velo/notebooks/data/HSPC_dataset/postpro_atac_adata/adata_atac_postpro.h5ad",
    

    "cluster_name": "celltype",

    "system": {
        "gpu_id": 5,
        "seed": 42
    },
    
    "preprocessing": {
        "basis": "umap",
        "min_shared_counts": 20,
        "n_top_genes": 2000,
        "n_pcs": 30,
        "n_neighbors": 30,
        "use_raw": false,
        "rescale_data": true,
        "window": 10e4,
        "reg_threshold": 1
    },

    "base_trainer": {
        "epochs": 10000,
        "save_dir": "../../CRAK-Velo/notebooks/data/HSPC_dataset/fitted_models_adata/",
        "verbosity": 2,
        "learning_rate": 1e-2
    },

    "regularization": {
        "reg_loss": true,
        "reg_times": 0.075,
        "reg_scale": 1
    }, 

    "fitting_option": {
        "mode": 1,
        "density": "SVD",
        "reorder_cell": "Soft_Reorder",
        "aggregrate_t": true,
        "assign_pos_u": false
    },

    "velocity_genes": {
        "r2_adjust": true,
        "vgenes": "basic"
    },

    "cell_initialization": {
        "iroot": null
    }

}
