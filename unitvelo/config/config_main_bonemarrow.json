{   
    "version": 1, 
    "disable_existing_loggers": false, 
    "name": "VelocityDemo",
    "logger_config_path": "/data/nelkazwi/code/UniTVelo-ATAC/UniTVelo-ATAC/unitvelo/config/config_logger.json",
    
    "adata_path": "/data/nelkazwi/RNA_velo/Unitvelo_atac/test_multivelo_data/RNA_data.h5ad",
    "atac_adata_path": "/data/nelkazwi/RNA_velo/Unitvelo_atac/test_multivelo_data/ATAC_data.h5ad",
    "cluster_name": "celltype",
    

    "system": {
        "gpu_id": 1,
        "seed": 42
    },
    
    "preprocessing": {
        "basis": "tsne",
        "min_shared_counts": 20,
        "n_top_genes": 2000,
        "n_pcs": 30,
        "n_neighbors": 30,
        "use_raw": false,
        "rescale_data": true,
        "window": 10e5
    },

    "base_trainer": {
        "epochs": 10,
        "save_dir": "/data/nelkazwi/RNA_velo/Unitvelo_atac/test_multivelo_data/",
        "verbosity": 2,
        "learning_rate": 1e-2
    },

    "regularization": {
        "reg_loss": true,
        "reg_times": 0.075,
        "reg_scale": 1
    }, 

    "fitting_option": {
        "mode": 1,
        "density": "SVD",
        "reorder_cell": "Soft_Reorder",
        "aggregrate_t": true,
        "assign_pos_u": false
    },

    "velocity_genes": {
        "r2_adjust": true,
        "vgenes": "offset"
    },

    "cell_initialization": {
        "iroot": "IPC"
    },

    "formatters": {
        "simple": {"format": "%(message)s"}, 
        "datetime": {"format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"}
    }, 

    "handlers": {
        "console": {
            "class": "logging.StreamHandler", 
            "level": "DEBUG", 
            "formatter": "simple", 
            "stream": "ext://sys.stdout"
            }, 
            
        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler", 
            "level": "INFO", 
            "formatter": "datetime", 
            "filename": "info.log", 
            "maxBytes": 99999999, 
            "backupCount": 20, "encoding": "utf8"
        }
    }, 

    "root": {
        "level": "INFO", 
        "handlers": [
            "console", 
            "info_file_handler"
        ]
    }


}
